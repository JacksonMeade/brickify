{
  "manifest_version": 2,
  "name": "Brickify Plugin",
  "description": "This extension makes it wayyyy more fun to browse the news and get the summary you need.",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    "images/sky.png",
    "images/tex.jpg",
    "images/icon128.png"
  ],
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "*://*/*"
  ]
}